@import './theme.styl'

html
body
  height 100%
  overflow hidden
  font-size 62.5%
  -webkit-font-smoothing antialiased

body
  display flex
  flex-flow row nowrap
  align-items stretch
  align-content stretch
  padding 0
  margin 0

body
input
textarea
keygen
select
button
  font-family 'Open Sans', sans-serif

  &:focus
    outline 0

::selection
  color --light-100
  background-color --blue-100

:focus
  outline 0
